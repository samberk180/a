{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react-native",
    "lib": ["esnext.array", "esnext.asynciterable", "esnext", "es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "paths": {
      "@store/*" : ["src/store/*"],
      "@services/*" : ["src/services/*"],
      "@theme/*" : ["src/theme/*"],
      "@screens/*" : ["src/screens/*"],
      "@navigation/*" : ["src/navigation/*"],
      "@components/*":  ["src/components/*"],
      "@assets/*":  ["src/assets/*"]
    },
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "exclude": ["dist", "node_modules", "jest.config.js", "App.js", ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "__tests__/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/App-test.js",
    "rn-cli.config.js",
    "App.ts",
    "@types/**/*.d.ts"
  ],
  "types": []
}
